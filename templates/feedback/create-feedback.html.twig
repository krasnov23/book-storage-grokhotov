{% extends 'base.html.twig' %}

{% block title %}Книжный магазин - Обратная связь  {% endblock %}


{% block body %}
<main class="text-center ms-5 me-5 mt-5">
    <h3 class="mb-5"> Обратная связь </h3>
    {{ form_start(form) }}
    <div>
        {{ form_errors(form) }}
    </div>

    <div class="mb-5">
        {{ form_label(form.email,'Введите ваш email',{'label_attr' : {'class' : 'form-label' }}) }}
        {{ form_widget(form.email,{'attr': {'class' : 'form-control form-control-lg w-75 book-add-field'}}) }}
        {{ form_errors(form.email) }}

    </div>

    <div class="mb-5">
        {{ form_label(form.name,'Введите свое имя', {'label_attr' : {'class' : 'form-label' }}) }}
        {{ form_widget(form.name,{'attr': {'class' : 'form-control form-control-lg w-75 book-add-field'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="mb-5">
        {{ form_label(form.message,'Введите сообщение', {'label_attr' : {'class' : 'form-label' }}) }}
        {{ form_widget(form.message,{'attr': {'class' : 'form-control form-control-lg w-75 book-add-field'}}) }}
        {{ form_errors(form.message) }}
    </div>

    <div class="mb-5">
        {{ form_label(form.phoneNumber,'Введите свой номер телефон (без восьмерки)', {'label_attr' : {'class' : 'form-label' }}) }}
        {{ form_widget(form.phoneNumber,{'attr': {'class' : 'form-control form-control-lg w-75 book-add-field'}}) }}
        {{ form_errors(form.phoneNumber) }}
    </div>

    <div class="mb-5">
        {{ form_label(form.captcha,'Введите код с картинки', {'label_attr' : {'class' : 'form-label' }}) }}
        {{ form_widget(form.captcha,{'attr': {'class' : 'mt-3 form-control form-control-lg w-75 book-add-field'}}) }}
        {{ form_errors(form.captcha) }}
    </div>

    <div>
        <button type="submit" class="btn btn-outline-warning btn-lg admin-button w-50 mb-2">Оставить отзыв</button>
    </div>

    {{ form_end(form) }}
</main>
{% endblock %}