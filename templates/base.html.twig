<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Книжный магазин {% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <!-- bootstrap -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/style19.css') }}">
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="row">
                <div class="col-lg-8 col-md-8 header-text">
                    <h1 class="fs-2 text-center">User, Добро пожаловать в книжный магазин</h1>
                </div>
                <div class="col-lg-4 col-md-4">
                    <img class="books-header" src="https://i.ytimg.com/vi/kwUOs6FilIg/maxresdefault.jpg" alt="books">
                </div>
                <div class="pb-4 pt-4 row text-center">
                    <div class="col-lg-2 col-md-6 col-sm-12 header-link-block">
                        <a class="header-link" href="{{ path('app_main') }}">Главная</a>
                    </div>
                    <div class="col-lg-2 col-md-6 col-sm-12 header-link-block">
                        <a class="header-link" href="{{ path('app_register') }}">Регистрация</a>
                    </div>
                    {% if app.user %}
                    <div class="col-lg-2 col-md-6 col-sm-12 header-link-block">
                        <a class="header-link" href="{{ path('app_logout') }}">Выход из аккаунта</a>
                    </div>
                    {% else %}
                    <div class="col-lg-2 col-md-6 col-sm-12 header-link-block">
                        <a class="header-link" href="{{ path('app_authentication') }}">Авторизация</a>
                    </div>
                    {% endif %}
                    <div class="col-lg-3 col-md-6 col-sm-12 header-link-block">
                        <a class="header-link" href="{{ path('app_create_feedback') }}">Обратная связь</a>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-12 header-link-block">
                        <a class="header-link" href="{{ path('app_book_category_list') }}">Категории книг</a>
                    </div>
                </div>
            </div>
        </header>
        {% for message in app.flashes('warning') %}
            <div class="alert alert-danger text-center" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">
                {{ message }}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
        <!-- bootstrap -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    </body>
</html>
